# DataReady.io Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

APP_NAME=DataReady.io
APP_VERSION=0.1.0
DEBUG=true
HOST=0.0.0.0
PORT=8000

# =============================================================================
# DATABRICKS AI GATEWAY (for Gemini models)
# =============================================================================

# Your Databricks workspace URL (without trailing slash)
DATABRICKS_HOST=https://your-workspace.cloud.databricks.com

# Personal Access Token or Service Principal token
DATABRICKS_TOKEN=your_databricks_token_here

# Model serving endpoints (adjust paths as needed)
GEMINI_PRO_ENDPOINT=/serving-endpoints/databricks-gemini-3-pro/invocations
GEMINI_FLASH_ENDPOINT=/serving-endpoints/databricks-gemini-flash/invocations

# =============================================================================
# WHISPER (Speech-to-Text)
# =============================================================================

# Model size: tiny, base, small, medium, large, large-v2, large-v3
WHISPER_MODEL=whisper-large-v3

# Set to false to use external Whisper API
USE_LOCAL_WHISPER=true

# External Whisper API URL (if USE_LOCAL_WHISPER=false)
WHISPER_API_URL=

# =============================================================================
# TEXT-TO-SPEECH
# =============================================================================

# TTS Model: kokoro, piper, edge-tts
TTS_MODEL=edge-tts

# Voice selection
TTS_VOICE=professional

# Audio sample rate
TTS_RATE=16000

# =============================================================================
# INTERVIEW SETTINGS
# =============================================================================

# Maximum core questions per interview
MAX_QUESTIONS=10

# Maximum follow-up questions per core question
MAX_FOLLOW_UPS_PER_QUESTION=2

# Response timeout in seconds (how long to wait for user response)
RESPONSE_TIMEOUT_SECONDS=180

# Minimum response duration in seconds
MIN_RESPONSE_SECONDS=5

# =============================================================================
# AUDIO SETTINGS
# =============================================================================

AUDIO_SAMPLE_RATE=16000
AUDIO_CHUNK_DURATION_MS=100

# =============================================================================
# CORS SETTINGS
# =============================================================================

# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:3000,http://localhost:8000
